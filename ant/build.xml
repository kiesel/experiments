<?xml version="1.0"?>
<project name="MyProject" default="usage" basedir=".">
  <description>
      simple example build file
  </description>
  
  <target name="usage">
    <echo>Supported targets:</echo>
    <echo> - fileops</echo>
    <echo> - touch</echo>
    <echo> - copy</echo>
    <echo> - tempfile</echo>
  </target>
  
  <target name="touch">
    <touch file="foo.xml"/>
  </target>
  
  <target name="copy">
    <copy file="foo.xml" toFile="bar.xml"/>
    <mkdir dir="tmp"/>
    <copy toDir="tmp">
      <fileset>
        <include name="foo.xml"/>
        <include name="build.xml"/>
      </fileset>
    </copy>
  
  </target>
  
  <target name="delete">
    <delete dir="tmp"/>
  </target>
  
  <target name="tempfile">
    <tempfile prefix="xp." property="mytempfile"/>
    <echo>Created temporary file ${mytempfile}</echo>
  </target>
  
  <target name="get">
    <property name="get.url" value="http://xp-framework.net/downloads/releases/5.6.3/lib/xp-rt-5.6.3.xar"/>
    <basename property="get.local" file="${get.url}"/>
    <echo>===> Downloading to ${get.local}</echo>
    <get 
     src="${get.url}"
     dest="${get.local}"
     verbose="true"
     useTimetamp="true"
    />
  </target>
  
  <target name="zip">
    <zip
     dest="ant.zip"
     basedir="net"
     comment="This archive has been created by Quantum."
    />
  </target>
  
  <target name="unzip">
    <unzip
     src="ant.zip"
     dest="build"
    />
  </target>

  <target name="xar">
    <xar
     dest="ant.xar"
     verbose="true"
     comment="This archive has been created by Quantum."
    >
      <fileset>
        <include name="net/**/*.class.php"/>
        <exclude name="**/*Task.class.php"/>
      </fileset>
    </xar>
  </target>
  
  <target name="unxar">
    <unxar
     src="ant.xar"
     dest="build"
    />
  </target>


  <target name="fileops" depends="touch,copy,delete"/>
</project>
